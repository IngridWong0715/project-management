<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Deadline</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, project_task_path(task.project.id, task.id)%></td>
      <td><%=task.description%></td>
      <td><%=formatted_datetime(task.due_date)%></td>
    </tr>
    <% end %>

  </tbody>
</table>
