<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#pastDueModal">
 PAST DUE
</button>

<!-- Modal -->
<div class="modal fade" id="pastDueModal" tabindex="-1" role="dialog" aria-labelledby="pastDueModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pastDueModalLabel">Past Due Projects</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th scope="col">Project Name</th>
              <th scope="col">Member(s)</th>
              <th scope="col">Deadline</th>
              <th scope="col">Complete</th>
            </tr>
          </thead>
          <tbody>
            <% past_due_projects.each do |project| %>
            <tr>
              <td><%= link_to project.name, project_path(project)%></td>
              <td><%= project.user.first_name %></td>
              <td><%=formatted_datetime(project.due_date)%></td>
              <td><div class="checkbox checkbox-success"><input type="checkbox" id="checkbox1" class="styled"><label></label></div></td>
            </tr>
            <% end %>

          </tbody>
        </table>
      </div>
      <div class="modal-footer">
         add footer?
      </div>
    </div>
  </div>
</div>

<!-- end modal -->
