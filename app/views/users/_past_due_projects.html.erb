<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#pastDueModal">
 <strong style="color:red;">PAST DUE</strong>

</button>

<!-- Modal -->
<div class="modal fade" id="pastDueModal" tabindex="-1" role="dialog" aria-labelledby="pastDueModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pastDueModalLabel">Past Due Projects</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render partial: "projects_table", locals: {projects: @past_due_projects} %>
      </div>
      <div class="modal-footer">
         add footer?
      </div>
    </div>
  </div>
</div>

<!-- end modal -->
