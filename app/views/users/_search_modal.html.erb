<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
Search
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for :project, url: search_project_path do |f| %>
        <%= f.text_field :name, placeholder: "search project" %>
        <select name="project[data][due]">
          <option value="0">Due Today</option>
          <option value="1">Due Tomorrow</option>
          <option value="7">Due Within A Week</option>
          <option value="14">Due Within 2 Weeks</option>
          <option value="30">Due Within A Month</option>
        </select>
        <%= f.submit "search" %>
        <% end %>

        <%= form_for :task, url: search_task_path do |f| %>
        <%= f.text_field :name, placeholder: "search task" %>

        <select name="task[data][due]">
          <option value="0">Due Today</option>
          <option value="1">Due Tomorrow</option>
          <option value="7">Due Within A Week</option>
          <option value="14">Due Within 2 Weeks</option>
          <option value="30">Due Within A Month</option>
        </select>
        <%= f.submit "search" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- end modal -->
