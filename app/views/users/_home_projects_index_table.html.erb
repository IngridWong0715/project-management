
<table class="table table-hover">
<thead>
  <tr>
    <% if team_projects?(projects) %>
      <th scope="col"> Group Projects</th>
    <% else %>
      <th scope="col">Individual Projects</th>
    <% end %>
    <% if team_projects?(projects) %>
      <th scope="col"> Team</th>
      <% end %>

    <th scope="col">Deadline</th>
    <th scope="col">Complete</th>
  </tr>
</thead>
<tbody>
  <% projects.each do |project| %>
  <tr>
    <td><%= link_to project.name, project_path(project)%></td>

    <% if team_projects?(projects) %>
      <td>
        <%= project.team.name  %>
      </td>
    <% end %>

    <td><%=formatted_datetime(project.due_date)%></td>
    <td><div class="checkbox checkbox-success"><input type="checkbox" id="checkbox1" class="styled"><label></label></div></td>
  </tr>
  <% end %>

</tbody>
</table>
