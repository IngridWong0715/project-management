<div class="container formatted">
    <h3 class="text-center"><%= @project.name %> </h3>
  <div class="row">
    <div class="col">
 Project Description: <%= project.description %><br>
    </div>
    <div class="col">
      People working on this project:  <%= project.team ? project.team.name : "Just me." %><br>
      <%= formatted_datetime(project.due_date) %>
      <%= link_to 'Edit Project', edit_project_path(@project.id) %>
      <%= link_to "Delete", @project, method: :delete, data: {confirm: "Are you sure? This action cannot be undone."} %>
    </div>
  </div>


  <div class="row">
    <div class="col">

      <%= render partial: "tasks/tasks_index_table", locals: {tasks: @project.tasks} %>
        <%= link_to 'Create new task', new_project_task_path(@project.id) %>
    </div>

  </div>
</div>
