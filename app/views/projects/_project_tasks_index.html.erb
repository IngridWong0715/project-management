<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Deadline</th>
      <th scope="col">Complete</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
    <tr>
      <td><%= link_to task.name, project_task_path(task.project.id, task.id), { :class=>"task-link" }%></td>
      <td><%=task.description%></td>
      <td><%=formatted_datetime(task.due_date)%></td>
      <td><div class="checkbox checkbox-success"><input type="checkbox" id="checkbox1" class="styled"><label></label></div></td>
    </tr>
    <% end %>

  </tbody>
</table>


// a task instance method
def getPreviousAndNextTask
  find all tasks belonging to that project: tasks = task.project.tasks
  get all ids:
    tasks.reduce()
end
