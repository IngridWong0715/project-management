<%binding.pry%>
<table class="table table-hover tasks_table">
  <thead>
    <tr>
      <th scope="col">Task Name</th>
      <th scope="col">Description</th>
      <th scope="col">Deadline</th>
      <th scope="col">Complete</th>
    </tr>
  </thead>
  <tbody>
    <% tasks.each do |task| %>
    <% if task.persisted? %>
      <tr>
        <td><a href="http://localhost:3000/projects/<%=task.project.id%>/tasks/<%=task.id%>" data-task="<%=task.id%>" class="task-link"><%=task.name%></a>
        <td><%=task.description%></td>
        <td><%=formatted_datetime(task.due_date) if task.due_date%></td>
        <td><div class="checkbox checkbox-success"><input type="checkbox" id="checkbox1" class="styled"><label></label></div></td>
      </tr>
    <% end %>
  <% end %>

  </tbody>
</table>
